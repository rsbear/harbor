{
  "nodeModulesDir": "auto",
  "type": "module",
  "tasks": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",

    "test": "vitest",
    "coverage": "vitest run --coverage",

    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "fmt": {
    "lineWidth": 120
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "exclude": [
        "ban-ts-comment",
        "ban-types",
        "jsx-button-has-type",
        "jsx-curly-braces",
        "jsx-key",
        "no-empty-interface",
        "no-explicit-any",
        "no-slow-types",
        "no-this-alias",
        "prefer-const"
      ]
    }
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.5",
    "@harbor/kv": "./pkgs/kv/mod.ts",
    "@sveltejs/adapter-static": "npm:@sveltejs/adapter-static@^3.0.9",
    "@sveltejs/kit": "npm:@sveltejs/kit@^2.36.1",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^6.1.3",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
    "@tauri-apps/api": "npm:@tauri-apps/api@^2.8.0",
    "@tauri-apps/cli": "npm:@tauri-apps/cli@^2.8.1",
    "@tauri-apps/plugin-fs": "npm:@tauri-apps/plugin-fs@^2.4.2",
    "@tauri-apps/plugin-opener": "npm:@tauri-apps/plugin-opener@^2.5.0",
    "@testing-library/jest-dom": "npm:@testing-library/jest-dom@^6.8.0",
    "@testing-library/svelte": "npm:@testing-library/svelte@^5.2.8",
    "@testing-library/user-event": "npm:@testing-library/user-event@^14.6.1",
    "@vitest/coverage-v8": "npm:@vitest/coverage-v8@3.2.4",
    "jsdom": "npm:jsdom@^26.1.0",
    "smol-toml": "npm:smol-toml@^1.4.2",
    "svelte": "npm:svelte@^5.38.2",
    "svelte-check": "npm:svelte-check@^4.3.1",
    "svelte-monaco": "npm:svelte-monaco@^1.0.4",
    "tailwind-merge": "npm:tailwind-merge@^3.3.1",
    "tailwind-variants": "npm:tailwind-variants@^2.1.0",
    "tailwindcss": "npm:tailwindcss@^4.1.12",
    "typescript": "npm:typescript@^5.9.2",
    "vite": "npm:vite@^7.1.3",
    "vitest": "npm:vitest@^3.2.4",
    "zod": "npm:zod@^4.0.17"
  }
}
